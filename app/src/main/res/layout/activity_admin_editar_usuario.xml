<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0ffff"
    tools:context=".admin_editar_usuario">

    <EditText
        android:id="@+id/input_admin_editar_usuario_rut"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:height="50dp"
        android:ems="10"
        android:hint="RUT Ej: 12345678-9"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_admin_editar_usuario_apellido_materno"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/input_admin_editar_usuario_apellido_materno"
        app:layout_constraintTop_toBottomOf="@+id/input_admin_editar_usuario_apellido_materno" />

    <EditText
        android:id="@+id/input_admin_editar_usuario_apellido_materno"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:height="50dp"
        android:ems="10"
        android:hint="Apellido Materno"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_admin_editar_usuario_apellido_paterno"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/input_admin_editar_usuario_apellido_paterno"
        app:layout_constraintTop_toBottomOf="@+id/input_admin_editar_usuario_apellido_paterno" />

    <EditText
        android:id="@+id/input_admin_editar_usuario_apellido_paterno"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:height="50dp"
        android:ems="10"
        android:hint="Apellido Paterno"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_admin_editar_usuario_nombres"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/input_admin_editar_usuario_nombres"
        app:layout_constraintTop_toBottomOf="@+id/input_admin_editar_usuario_nombres" />

    <EditText
        android:id="@+id/input_admin_editar_usuario_nombres"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:height="50dp"
        android:ems="10"
        android:hint="Nombres"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145" />

    <TextView
        android:id="@+id/txt_admin_editar_usuario_editar_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Editar Usuario"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_admin_editar_usuario_volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/volver"
        app:layout_constraintBottom_toBottomOf="@+id/txt_admin_editar_usuario_editar_usuario"
        app:layout_constraintEnd_toStartOf="@+id/txt_admin_editar_usuario_editar_usuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_admin_editar_usuario_editar_usuario" />

    <Button
        android:id="@+id/btn_admin_editar_usuario_eliminar"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#EF1606"
        android:text="Eliminar usuario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.898" />

    <Button
        android:id="@+id/btn_admin_editar_usuario_guardar_cambios"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="#4CAF50"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.898" />

    <Spinner
        android:id="@+id/spinner_admin_editar_usuario_estado"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/input_admin_editar_usuario_repetir_clave"
        app:layout_constraintStart_toStartOf="@+id/input_admin_editar_usuario_repetir_clave"
        app:layout_constraintTop_toBottomOf="@+id/input_admin_editar_usuario_repetir_clave" />

    <EditText
        android:id="@+id/input_admin_editar_usuario_clave"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Ingrese contraseña"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/input_admin_editar_usuario_rut"
        app:layout_constraintStart_toStartOf="@+id/input_admin_editar_usuario_rut"
        app:layout_constraintTop_toBottomOf="@+id/input_admin_editar_usuario_rut" />

    <EditText
        android:id="@+id/input_admin_editar_usuario_repetir_clave"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Repita contraseña"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/input_admin_editar_usuario_clave"
        app:layout_constraintStart_toStartOf="@+id/input_admin_editar_usuario_clave"
        app:layout_constraintTop_toBottomOf="@+id/input_admin_editar_usuario_clave" />

</androidx.constraintlayout.widget.ConstraintLayout>